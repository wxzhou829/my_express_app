extends layout

block content

  h1 #{title}: #{genre.name} 
  
  if genre_books.length
    
    p.text-warning #[strong Delete the flowing Books before attempting to delete this genre.]
  
    div(style='margin-left:20px;margin-top:20px;')
   
      h4 Books
   
      dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}
      
  else
    p.text-warning Do you really want to delete this Book?
    
    form(method='POST' action='')
        div.form-group
            input#authorid.form-control(type='hidden' name='genreid' required='true' value=genre._id )
        button.btn.btn-primary(type='submit') Delete